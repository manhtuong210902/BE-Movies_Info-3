<div class="d-flex justify-content-center align-items-center min-vh-100">
    <!-- Pills navs -->
    <div style="width: 350px;">
        <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
          <li class="nav-item" role="presentation">
            <a class="nav-link active" id="tab-login" href="/user/login" role="tab"
              aria-controls="pills-login" aria-selected="true">Login</a>
          </li>
          <li class="nav-item" role="presentation">
            <a class="nav-link" id="tab-register" href="/user/register" role="tab"
              aria-controls="pills-register" aria-selected="false">Register</a>
          </li>
        </ul>
        <!-- Pills navs -->
        
        <!-- Pills content -->
        <div class="tab-content">
            <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
                <form method="post" action="/user/login">
                <!-- Email input -->
                <div class="form-outline mb-4">
                    <label class="form-label" for="loginName">Username</label>
                    <input type="text" name="username" value="{{username}}" id="loginName" class="form-control" />
                </div>
            
                <!-- Password input -->
                <div class="form-outline mb-4">
                    <label class="form-label" for="loginPassword">Password</label>
                    <input type="password" name="password" value="{{password}}" id="loginPassword" class="form-control" />
                </div>
            
                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>
            
                <!-- Register buttons -->
                <div class="text-center">
                    <p>Not a member? <a href="user/register">Register</a></p>
                </div>
                </form>
            </div>
        </div>

        <div class="mt-4">
            {{#each errors}}
                <p class="text-danger">{{this.message}}</p>
            {{/each}}
        </div>
    </div>
</div>